<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".TwoMatrix">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Calculate a 3 X 3 Matrix"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/value_a1"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:maxLines="1"
            android:hint="a1"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_b1"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="b1"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_c1"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="c1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/value_a2"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="a2"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_b2"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="b2"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_c2"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="c2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/value_a3"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="a3"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_b3"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="b3"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/value_c3"
            android:layout_width="50dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:hint="c3"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Answer"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        />
    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        />


    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textStyle="bold"
        android:layout_margin="15dp" />


    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="back home"
        />


</LinearLayout>